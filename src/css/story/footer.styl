$break-point = '(max-width: 450px)'

footer.wanderwhim-footer
	padding 3rem 1rem
	padding-bottom 0rem
	border-top 4px solid $black
	font-family $sans
	margin-top 3rem



	.footer-recirc
		max-width 65rem
		margin 0 auto
		&__articles
			display flex
			flex-wrap wrap
			justify-content space-between

		&__article
			display block
			width 100%
			border none
			margin-bottom 2rem
			+mq('bp-5')
				width calc(25% - 1.5rem)
				margin-right 1.5rem
				&:last-of-type
					margin-right 0

		.article__headline
			font-family 'Avenir'
			text-align center
			set-type-size(large, false)
			line-height 1
			font-weight 700
			padding-left 0.5rem
			// padding-top 1rem

	.footer-company
		margin-left 5rem
		margin-right 5rem
		margin-top 3rem
		display flex
		flex-direction column
		font-family $sans-display
		+mq('bp-5')
			flex-direction row

		&__cta
			order 1
			margin 0 0 0 0
			width 100%
			+mq('bp-5')
				margin 0 0 0 0

		&__cta-list
			display flex
			flex-wrap wrap
			flex-direction column
			height 12rem
			+mq('bp-5')
				flex-direction column

			li
				display flex
				width 50%
				margin-bottom 1rem

				a
					display flex
					border none

				p
					font-family $sans-display
					margin 0
					padding-left 0.5rem
					padding-top 0.1rem
					line-height 1
					color $gray
					+mq('bp-4')
						set-type-size(large)

				svg
					fill $gray
					stroke none
					vertical-align middle
					circle, polyline, line
						fill none
						stroke $gray
				.feather-mail path, .feather-lock path, .feather-rss path
						stroke $gray
						fill none

		&__about
			order 0
			width 100%
			color $gray
			display flex
			flex-direction column
			+mq('bp-5')
				width calc(100% - 24rem)

			p
				margin 0
				set-type-size(root, false)
				line-height 1.4
			svg
				width 12rem
				margin-bottom 0.5rem


.footer-bg
	width 100vw
	margin-left calc(-50vw + 50%)
	height 200px
	position relative
	overflow hidden
	display -webkit-box
	display -ms-flexbox
	display flex
	flex-wrap wrap
	justify-content center

	.overlay
		position relative
		justify-content center
		width 100%
		height 200px
		top 0
		left 0
		right 0
		bottom 10
		content ''
		opacity 1
		background -moz-linear-gradient(135deg, #11ded9 30%, #11ded9 100%)
		background -webkit-gradient(left bottom, right top, color-stop(0%, #11ded9), color-stop(100%, #05e646))
		background -webkit-linear-gradient(135deg, #11ded9 30%, #05e646 100%)
		background -o-linear-gradient(135deg, #11ded9 30%, #05e646 100%)
		background -ms-linear-gradient(135deg, #11ded9 30%, #05e646 100%)
		background linear-gradient(135deg, #11ded9 30%, #05e646 100%)
		filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#11ded9', endColorstr='#05e646', GradientType=1 )")


